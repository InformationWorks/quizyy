<div class="span12">
  <div class="span8">
    <section class="category-section first">
    <h2><%= @name %></h2>
    <hr>
    <!-- show only three per row -->
    <div class="row">
      <% @quizzes.each do |quiz| %>
      
      <%= render :partial => "quiz_block", :locals => { :quiz => quiz } %>
      
      <% end %>
    </div>
    </section>
    <% if current_user != nil %>
      <!-- Show the cart -->
      <%= content_tag "div", id: "cart-wrapper",class: "span3 well", data: { cart: @cart.cart_items.to_json(:include => [:quiz,:package]) } do%>
      <% end %>
    <% end %>
   </div> 
</div>
