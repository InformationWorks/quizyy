<%

@package = package
 
%>



<div class="span4 pack-tile light-grey">
    <h2><%= @package.name %></h2>
    <hr>
    <p><strong><%= @package.quizzes.count %></strong> full length tests</p>
    <p><strong><%= @package.quizzes.count * 4 %></strong> sections</p>
    <p><strong><%= @package.quizzes.count * 80 %></strong> questions</p>
    <div class="prize">
      <hr>
        
        <% if current_user != nil %>
        
        <div class="actions hide btn-group" style="float:left">
            <%= link_to( "Buy"  , cart_items_path(:package_id => @package.id,:back_controller => "checkout",:back_action => "show_cart") ,
                    :method => "post", :disable_with => 'adding to cart...', :class=>'btn btn-primary') %>
            <% cart_item_id = current_user.get_cart_item_id_for_package(@package.id) %>
            <% if cart_item_id != -1 %>
                <a href="#" rel="tooltip" class="btn remove-cart-btn" title="Remove from Cart" data-disabled-with="removing.." data-item-type="package" data-value="<%=@package.id%>" data-id="<%= cart_item_id %>">
                  <span class="icon-remove"></span>
                </a>
            <% else %>
                <a href="#" rel="tooltip" class="btn add-cart-btn" title="Add to Cart" data-disabled-with="adding.." data-item-type="package" data-value="<%=@package.id%>">
                  <span class="icon-plus"></span>
                </a>
            <% end %>
          </div>
          
         <% end %>
      
        <p class="lead"><span style='font-family: "Open Sans";'>&#x20b9;</span>  <%= @package_1.price %></p>
      </div>
</div>