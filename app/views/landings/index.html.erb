
<%  content_for :main_unit do %>
    <div class="row">
      <div class="span6">
        <div class="row video">
          <div class="row tagline">
            <h1>Conducting online tests has never been easier</h1>
            <p class="lead">We bet everyone in your school will love it. </p>
            <div class="video">
            </div>
          </div>
        </div>
        <div class="row misc">
        </div>
      </div>
      <div class="span5">
        <div class="row">

          <div id="sign-up" class="span6 light-grey">

            <h2>Sign Up </h2>
            <hr/>
            <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" } ) do |f| %>
                <%= devise_error_messages! %>

                <div class="control-group">
                  <%= f.label :full_name, { :class => 'control-label' } %>
                  <div class="controls">
                    <%= f.text_field :email, { :id => "icon", :placeholder => "Full name", :class => "span3"} %>
                  </div>
                </div>

                <div class="control-group">
                  <%= f.label :email, { :class => 'control-label' } %>
                  <div class="controls landing_sign_up_textbox">
                    <%= f.email_field :email, { :id => "icon", :placeholder => "Email", :class => "span3" } %>
                  </div>
                </div>

                <div class="control-group">
                  <%= f.label :password, { :class => 'control-label' } %>
                  <div class="controls">
                    <%= f.password_field :password, { :id => "icon", :placeholder => "Password", :class => "span3"} %>
                  </div>
                </div>

                <div class="control-group">
                  <%= f.label :confirm_password, { :class => 'control-label' } %>
                  <div class="controls">
                    <%= f.password_field :password_confirmation, { :id => "icon", :placeholder => "Re-enter password",  :class => "span3"} %>
                  </div>
                </div>

                <div class="control-group">
                  <div class="controls">
                    <%= f.submit "Sign up", { :class => "btn" } %>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
<%end%>


<footer>
  <p>&copy; InformationWorks Systems and Solutions Pvt. Ltd. 2012</p>
</footer>

</div> <!-- /container -->