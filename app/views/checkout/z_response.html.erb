<div id="content" class="span12">
  <div class="span8">
	<center>
		
	<% if @checksum_check %>
		
		Order # <%= @zaakpay_post["orderId"].to_s %> <br />
		
		<% if @zaakpay_post["responseCode"].to_s == "100" %>
			Transaction completed successfully. Order has been added to your account.
		<% else %>
			Transaction processing failed. <br />
			
			Error Code: <% @zaakpost_post["responseDescription"].to_s %>
		<% end %>
		
	<% else %>
		Transaction failed due to fraud detection. Contact us at developer@informationworks.in 
	<% end %>
	
	<br />
	DELETE BELOW VALUES BEFORE GOING LIVE
	<br />
		
	<table width="500px;">
	  <% @zaakpay_post.each do |key, value| %>
	    <tr>
	      <td width="50%" align="center" valign="middle"><%= key %></td>
	      <td width="50%" align="center" valign="middle"><%= value %></td>
	    </tr>
	  <% end %>
	  <tr>
		  <td width="50%" align="center" valign="middle">Checksum Verified?</td>
		  <td width="50%" align="center" valign="middle"><%= @checksum_check ? "Yes" : "No" %></td>
	  </tr>
		
	</table>
	
	</center>
  </div>
</div>
