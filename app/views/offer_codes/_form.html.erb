<% content_for :admin_content do %>

<!-- Data block -->
<article class="data-block">
	<div class="data-container">
		<header>
			<h2><%= yield :offer_code_form_title %></h2>
			<ul class="data-header-actions">
				<%= link_to(offers_path,:class => "btn btn-alt btn-danger", :data => { :confirm => "Are you sure about canceling the form?" } ) do %>
				 Cancel
				<% end %>	
			</ul>
		</header>
		<section class="tab-content">
			
			<!-- Form starts here -->
			<div class="span11" style="margin-left: 15px;">
				  <%= form_for(@offer_code) do |f| %>
				  <% if @offer_code.errors.any? %>
				  
				  	<div class="alert alert-error">
						<button class="close" data-dismiss="alert"></button>
						<strong><%= pluralize(@offer_code.errors.count, "error") %> prohibited this offer code from being saved!</strong>
						<br />
						<br /> 
						<ul>
					      <% @offer_code.errors.full_messages.each do |msg| %>
					        <li><%= msg %></li>
					      <% end %>
					    </ul>
					</div>
				  <% end %>
				
				  	<div class="control-group">
						<label class="control-label" for="input"><%= f.label :code %></label>
						<div class="controls">
							<%= f.text_field :code, :class => "input-xlarge" %>
						</div>
					</div>
					
					<div class="control-group">
                        <label class="control-label" for="input"><%= f.label :desc %></label>
                        <div class="controls">
                            <%= f.text_area :desc, :class => "input-xlarge" %>
                        </div>
                    </div>
				  	
				  	<div class="form-actions">
						<%= f.submit :class => "btn btn-info" %>
					</div>
				<% end %>
			</div>
			<!-- Form ends here -->
		</section>
	</div>
</article>
<!-- /Data block -->

<br />

<% end %>

<%= render 'admins/admin_base' %>