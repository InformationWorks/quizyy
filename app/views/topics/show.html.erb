<% content_for :admin_content do %>

<!-- Data block -->
<article class="data-block">
	<div class="data-container">
		<header>
			<h2>Showing a category</h2>
			<ul class="data-header-actions">
				<%= link_to(edit_topic_path(@topic),:class => "btn btn-warning" ) do %>
				 Edit
				<% end %>
				<%= link_to(topics_path,:class => "btn btn-danger") do %>
				 Back
				<% end %>	
			</ul>
		</header>
		<section class="tab-content">
			
			<!-- Form starts here -->
			<div class="span11" style="margin-left: 15px;">
			  	<div class="control-group">
					<label class="control-label" for="input">Name</label>
					<div class="controls">
						<p><%= @topic.name %></p>
					</div>
				</div>
				
				<div class="control-group">
                    <label class="control-label" for="input">Section Type</label>
                    <div class="controls">
                        <p><%= @topic.section_type ? @topic.section_type.name : "N/A" %></p>
                    </div>
                </div>
			</div>
			<!-- Form ends here -->
		</section>
	</div>
</article>
<!-- /Data block -->

<br />

<% end %>

<%= render 'admins/admin_base' %>
