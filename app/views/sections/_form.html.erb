<%= form_for([@quiz,@section]) do |f| %>
  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% @section.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :sequence_no %><br />
    <%= f.number_field :sequence_no %>
  </div>
  <div class="field">
    <%= f.label :display_text %><br />
    <%= f.text_area :display_text, :class => "tinymce", :rows => 40, :cols => 160 %>
    <%= tinymce %>
  </div>
  <div class="field">
    <%= f.label :section_type %><br />
    <%= f.collection_select :section_type_id, SectionType.all, :id, :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
