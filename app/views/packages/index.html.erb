<% content_for :admin_content do %>

<!-- Data block -->
<article class="data-block">
	<div class="data-container">
		<header>
			<h2>Packages</h2>
			<ul class="data-header-actions">
				<%= link_to(new_package_path,:class => "btn btn-primary") do %>
				 Create New Package
				<% end %>	
			</ul>
		</header>
		<section class="tab-content">
		
			<!-- Tab #static -->
			<div class="tab-pane active" id="static">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>Name</th>
							<th>Desc</th>
							<th>Slug</th>
							<th>Price</th>
							<th>Position</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						
						<% @packages.each do |package| %>
						  <tr>
						    <td><%= package.name %></td>
						    <td><%= package.desc %></td>
						    <td><%= package.slug %></td>
						    <td><%= package.price %></td>
						    <td><%= package.position.to_s %></td>
						    <td class="toolbar">
						      <div class="btn-group">
						    	<%= link_to(package, :class => "btn") do %>
						    	  <span class="awe-eye-open"></span>
						    	<% end %>
						    	<%= link_to(edit_package_path(package), :class => "btn") do %>
						    	  <span class="awe-wrench"></span>
						    	<% end %>
						    	<%= link_to(package, method: :delete, data: { confirm: 'Are you sure you want to delete this package?' }, :class => "btn") do %>
						    	  <span class="awe-remove"></span>
						    	<% end %>
						      </div>
						    </td>
						  </tr>
						<% end %>
					</tbody>
				</table>
		</section>
		<footer class="warning">
			<p>Package position is used to sort the packages in the store.</p>
		</footer>
	</div>
</article>
<!-- /Data block -->

<br />

<% end %>

<%= render 'admins/admin_base' %>
