
<% content_for :admin_content do %>

<!-- Data block -->
<article class="data-block">
	<div class="data-container">
		<header>
			<h2>Showing package at position <%= @package.position %></h2>
			<ul class="data-header-actions">
				<%= link_to(edit_package_path(@package),:class => "btn btn-warning" ) do %>
				 Edit
				<% end %>
				<%= link_to(packages_path,:class => "btn btn-danger") do %>
				 Back
				<% end %>	
			</ul>
		</header>
		<section class="tab-content">
			
			<!-- Form starts here -->
			<div class="span11" style="margin-left: 15px;">
				  
				  	<div class="control-group">
						<label class="control-label" for="input">Name</label>
						<div class="controls">
							<p><%= @package.name %></p>
							<p class="help-block">This appears as the name of the package on the store.</p>
						</div>
					</div>
				  	
				  	<div class="control-group">
						<label class="control-label" for="textarea">Description</label>
						<div class="controls">
							<p><%= @package.desc %></p>
						</div>
					</div>
					
					<div class="control-group">
						<label class="control-label" for="input">Price</label>
						<div class="controls">
							<p><%= @package.price %></p>
							<p class="help-block">Price is in Rupees.</p>
						</div>
					</div>
					
					<div class="control-group">
						<label class="control-label" for="input">Position</label>
						<div class="controls">
							<p><%= @package.position %></p>
							<p class="help-block">Position is used to sort & position packages.</p>
						</div>
					</div>
					
					<div class="control-group">
						<label class="control-label" for="input">Quizzes</label>
						<br />
						<div class="controls">
							<table class="table table-hover">
							<thead>
								<tr>
								</tr>
							</thead>
							<tbody>
								
								<% @package.quizzes.each do |quiz| %>
								  <tr>
								    <td><%= link_to quiz.name, quiz_path(quiz) %></td>
								    <td class="toolbar">
								      <div class="btn-group">
								      	<%= link_to(destroy_quiz_from_package_path(@package,quiz), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn") do %>
								      	  <span class="awe-remove"></span>
								      	<% end %>
								      </div>
								    </td>
								  </tr>
								<% end %>
							</tbody>
							</table>
						</div>
					</div>
					
					<div class="control-group">
						<label class="control-label" for="input">Add quiz to package</label>
						<br />
						<div class="controls">
							<%= form_for(@package, :url => add_quiz_to_package_path(@package), :html => { :class => "form-horizontal" , :style=>"background: white;border: 0px;" } ) do |f| %>
								<%= collection_select(:quiz, :id, @quizzes, :id, :name, {:prompt => true}) %>
								<br />
								<br />
								<%= f.submit "Add", :class => "btn btn-flat btn-info" %>
							<% end %>
						</div>
					</div>
					
			</div>
			<!-- Form ends here -->
		</section>
	</div>
</article>
<!-- /Data block -->

<br />

<% end %>

<%= render 'admins/admin_base' %>
