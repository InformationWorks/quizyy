<p>
  <b>Name:</b>
  <%= @package.name %>
</p>

<p>
  <b>Desc:</b>
  <%= @package.desc %>
</p>

<p>
  <b>Price:</b>
  <%= @package.price %>
</p>

<p>
  <b>Position:</b>
  <%= @package.position %>
</p>

<p>
	<b>Quizzes</b>
	
	<table>
  <tr>
    <th>Quiz Name</th>
    <th></th>
  </tr>

	<% @package.quizzes.each do |quiz| %>
  <tr>
    <td><%= link_to quiz.name, quiz_path(quiz) %></td>
    <td><%= link_to 'Remove', destroy_quiz_from_package_path(@package,quiz), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
	<% end %>	
	</table>
	
</p>

<p>
	<b>Add a quiz</b>
	<%= form_for @package, :url => add_quiz_to_package_path(@package) do |f| %>
	
	<%= collection_select(:quiz, :id, @quizzes, :id, :name, {:prompt => true}) %>
	<%= f.submit "Add" %>
          
	<% end %>          
</p>


<%= link_to 'Edit', edit_package_path(@package) %> |
<%= link_to 'Back', packages_path %>
