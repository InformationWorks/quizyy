<% content_for :admin_content do %>

<!-- Data block -->
<article class="data-block">
	<div class="data-container">
		<header>
				<%= link_to(new_admins_type_path,:class => "btn btn-primary") do %>
				 Create New Type
				<% end %>
		</header>
		<section class="tab-content">
		
			<!-- Tab #static -->
			<div class="tab-pane active" id="static">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>Code</th>
							<th>Name</th>
							<th>Slug</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						
						<% @types.each do |type| %>
						  <tr>
						  	<td><%= type.code %></td>
						    <td><%= type.name %></td>
						    <td><%= type.slug %></td>
						    <td>
						    	<%= link_to 'Show', admins_type_path(type) %>
						    	<%= link_to 'Edit', edit_admins_type_path(type) %>
						    	<%= link_to(admins_type_path(type), method: :delete, data: { confirm: 'Are you sure you want to delete this type?' }) do %>
						    	  Delete
						    	<% end %>
						    </td>
						  </tr>
						<% end %>
					</tbody>
				</table>
                </div>
		</section>
	</div>
</article>
<!-- /Data block -->

<br />

<% end %>

<%= render 'admins/admin_base' %>