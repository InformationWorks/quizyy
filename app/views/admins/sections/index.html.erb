
<h1>Quiz name: <%= @quiz.name %> </h1>

<h2>Listing sections</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Sequence no</th>
    <th>Quiz</th>
    <th>Section type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sections.each do |section| %>
  <tr>
    <td><%= section.name %></td>
    <td><%= section.sequence_no %></td>
    <td><%= section.quiz.name %></td>
    <td><%= section.section_type.name %></td>
    <td><%= link_to 'Show', quiz_section_path(section.quiz,section) %></td>
    <td><%= link_to 'Edit', edit_quiz_section_path(section.quiz,section) %></td>
    <td><%= link_to 'Delete', quiz_section_path(section.quiz,section), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

