<% content_for :admin_content do %>

<!-- Data block -->
<article class="data-block">
	<div class="data-container">
		<header>
			<h2>Topics</h2>
			<ul class="data-header-actions">
				<%= link_to(new_admins_topic_path,:class => "btn btn-primary") do %>
				 Create New Topic
				<% end %>	
			</ul>
		</header>
		<section class="tab-content">
		
			<!-- Tab #static -->
			<div class="tab-pane active" id="static">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>Name</th>
							<th>SectionType</th>
							<th>Slug</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						
						<% @topics.each do |topic| %>
						  <tr>
						    <td><%= topic.name %></td>
						    <td><%= topic.section_type.name %></td>
						    <td><%= topic.slug %></td>
						    <td class="toolbar">
						      <div class="btn-group">
						    	<%= link_to(admins_topic_path(topic), :class => "btn") do %>
						    	  <span class="awe-eye-open"></span>
						    	<% end %>
						    	<%= link_to(edit_admins_topic_path(topic), :class => "btn") do %>
						    	  <span class="awe-wrench"></span>
						    	<% end %>
						    	<%= link_to(admins_topic_path(topic), method: :delete, data: { confirm: 'Are you sure you want to delete this topic?' }, :class => "btn") do %>
						    	  <span class="awe-remove"></span>
						    	<% end %>
						      </div>
						    </td>
						  </tr>
						<% end %>
					</tbody>
				</table>
		</section>
		<footer class="error">
			<div class="alert alert-error">
				<strong style="font-size: 15px;">DO NOT DELETE OR RENAME TOPIC IF YOU DON'T KNOW WHAT YOU ARE DOING !</strong>
			</div>
		</footer>
	</div>
</article>
<!-- /Data block -->

<br />

<% end %>

<%= render 'admins/admin_base' %>