<% content_for :admin_content do %>

<!-- Data block -->
<article class="data-block">
	<div class="data-container">
		<header>
				<%= link_to(new_admins_topic_path,:class => "btn btn-primary") do %>
				 Create New Topic
				<% end %>
		</header>
		<section class="tab-content">
		
			<!-- Tab #static -->
			<div class="tab-pane active" id="static">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>Name</th>
							<th>Slug</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						
						<% @topics.each do |topic| %>
						  <tr>
						    <td><%= topic.name %></td>
						    <td><%= topic.slug %></td>
						    <td>
						    	<%= link_to 'Show', admins_topic_path(topic) %>
						    	<%= link_to 'Edit', edit_admins_topic_path(topic)%>
						    	<%= link_to(admins_topic_path(topic), method: :delete, data: { confirm: 'Are you sure you want to delete this topic?' }) do %>
						    	  Delete
						    	<% end %>
						    </td>
						  </tr>
						<% end %>
					</tbody>
				</table>
                </div>
		</section>
	</div>
</article>
<!-- /Data block -->

<br />

<% end %>

<%= render 'admins/admin_base' %>