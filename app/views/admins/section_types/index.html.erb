<% content_for :admin_content do %>

<!-- Data block -->
<article class="data-block">
	<div class="data-container">
		<header>
			<ul class="data-header-actions">
				<%= link_to(new_admins_section_type_path,:class => "btn btn-primary") do %>
				 Create New Section Type
				<% end %>	
			</ul>
		</header>
		<section class="tab-content">
		
			<!-- Tab #static -->
			<div class="tab-pane active" id="static">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>Name</th>
							<th>Slug</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						
						<% @section_types.each do |section_type| %>
						  <tr>
						    <td><%= section_type.name %></td>
						    <td><%= section_type.slug %></td>
						    <td>
						    	<%= link_to 'Show', admins_section_type_path(section_type)%>
						    	<%= link_to 'Edit', edit_admins_section_type_path(section_type)%>
						    	<%= link_to(admins_section_type_path(section_type), method: :delete, data: { confirm: 'Are you sure you want to delete this section type?' }, :class => "btn") do %>
						    	  Delete
						    	<% end %>
						  </tr>
						<% end %>
					</tbody>
				</table>
            </div>
		</section>
		<footer class="error">
		</footer>
	</div>
</article>
<!-- /Data block -->

<br />

<% end %>

<%= render 'admins/admin_base' %>
