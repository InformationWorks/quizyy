<% content_for :admin_content do %>

<!-- Data block -->
<article class="data-block">
	<div class="data-container">
		<header>
			<ul class="data-header-actions">
				<%= link_to(new_admins_package_path,:class => "btn btn-primary") do %>
				 Create New Package
				<% end %>	
			</ul>
		</header>
		<section class="tab-content">
		
			<!-- Tab #static -->
			<div class="tab-pane active" id="static">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>Name</th>
							<th>Desc</th>
							<th>Slug</th>
							<th>Price</th>
							<th>Position</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						
						<% @packages.each do |package| %>
						  <tr>
						    <td><%= package.name %></td>
						    <td><%= package.desc %></td>
						    <td><%= package.slug %></td>
						    <td><%= package.price %></td>
						    <td><%= package.position.to_s %></td>
						    <td>
						    	<%= link_to 'Show',admins_package_path(package)%>
						    	<%= link_to 'Edit',edit_admins_package_path(package)%>
						    	<%= link_to(admins_package_path(package), method: :delete, data: { confirm: 'Are you sure you want to delete this package?' }, :class => "btn") do %>
						    	  Delete
						    	<% end %>
						    </td>
						  </tr>
						<% end %>
					</tbody>
				</table>
                </div>
		</section>
		<footer class="warning">
			<p>Package position is used to sort the packages in the store.</p>
		</footer>
	</div>
</article>
<!-- /Data block -->

<br />

<% end %>

<%= render 'admins/admin_base' %>
