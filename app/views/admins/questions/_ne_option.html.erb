<form class="form-horizontal" style="background-color: transparent;border:none;">
    <div class="control-group">
        <div class="controls">
            <% if @options.length == 1 %>
                    <% if @options.pop().content.split(',').length == 2 %>
                        <input name="first" type="text"> 
                        <hr style="width: 200px;"/> 
                        <input name="second" type="text"/>
                    <% else %>
                        <input name="first" type="text">
                    <% end %>
            <% end %>
        </div>
    </div>
</form>
<input type="hidden" name="marked" id="marked" value="false"/>