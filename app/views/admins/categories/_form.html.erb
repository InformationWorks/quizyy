<% content_for :admin_content do %>

<!-- Data block -->
<article class="data-block">
	<div class="data-container">
		<section class="tab-content">
			
			<!-- Form starts here -->
			<div>
				  <%= form_for([:admins,@category],:class=>"form-horizontal") do |f| %>
				  <fieldset>
				  <legend><%= yield :category_form_title %></legend>
				  <% if @category.errors.any? %>
				  
				  	<div class="alert alert-error">
						<button class="close" data-dismiss="alert"></button>
						<strong><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved!</strong>
						<br />
						<br /> 
						<ul>
					      <% @category.errors.full_messages.each do |msg| %>
					        <li><%= msg %></li>
					      <% end %>
					    </ul>
					</div>
				  <% end %>
				
				  	<div class="control-group">
						<label class="control-label" for="input"><%= f.label :code %></label>
						<div class="controls">
							<%= f.text_field :code, :class => "input-xlarge" %>
							<p class="help-block">Code is directly used in the source code for comparison. Change carefully.</p>
						</div>
					</div>
					
					<div class="control-group">
						<label class="control-label" for="input"><%= f.label :name %></label>
						<div class="controls">
							<%= f.text_field :name, :class => "input-xlarge" %>
						</div>
					</div>
					
					<div class="control-group">
						<label class="control-label" for="input"><%= f.label :section_type %></label>
						<div class="controls">
							<%= f.collection_select :section_type_id, SectionType.order(:name), :id, :name,  { :include_blank => false }, { :class => "input-xlarge" } %>
						</div>
					</div>
				  	
				  	<div class="form-actions">
				  		<%= link_to(admins_categories_path,:class => "btn") do %>
						 Cancel
						<% end %>
						<%= f.submit :class => "btn" %>
					</div>
					</fieldset>
				<% end %>
			</div>
			<!-- Form ends here -->
		</section>
	</div>
</article>
<!-- /Data block -->

<br />

<% end %>

<%= render 'admins/admin_base' %>
