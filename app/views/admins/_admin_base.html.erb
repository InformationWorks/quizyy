<% content_for :head_top do %>
<% end %>

<% content_for :nav_menu_header do %>
	Admin
<% end %>

<div id="admin-content" style="width:100%">
	<div class="pull-left">
		<!-- Left (navigation) side -->
			<div class="span3 affix-top">
				<!-- Main navigation -->
				<nav class="main-navigation" role="navigation">
					<ul>
						<li <% if @current_controller == "quizzes" || 
								  @current_controller == "sections" || 
								  @current_controller == "questions" || 
								  @current_controller == "options" %>class = "current"<% end %> >
							<%= link_to(admins_quizzes_path, :class => "no-submenu") do %>
							<span class="awe-tasks"></span>Quizzes

							<% end %>
						</li>
						<li <% if @current_controller == "categories" %>class = "current"<% end %> >
							<%= link_to(admins_categories_path, :class => "no-submenu") do %>
							<span class="awe-sitemap"></span>Categories
							<% end %>
						</li>
						<li <% if @current_controller == "types" %>class = "current"<% end %> >
							<%= link_to(admins_types_path, :class => "no-submenu") do %>
							<span class="awe-tags"></span>Types
							<% end %>
						</li>
						<li <% if @current_controller == "topics" %>class = "current"<% end %> >
							<%= link_to(admins_topics_path, :class => "no-submenu") do %>
							<span class="awe-folder-close"></span>Topics
							<% end %>
						</li>
						<li <% if @current_controller == "students" %>class = "current"<% end %> >
                            <%= link_to(admins_students_path, :class => "no-submenu") do %>
                            <span class="awe-user"></span>Students
                            <% end %>
                        </li>
                        
                        <% if current_user.role? :super_admin %>
                          <li <% if @current_controller == "admins" && @current_action == "home" %>class = "current"<% end %> >
                            <%= link_to(admins_home_path, :class => "no-submenu") do %>
                                <span class="awe-home"></span>Dashboard
                            <% end %>
                          </li>
                          <li <% if @current_controller == "packages" %>class = "current"<% end %> >
                            <%= link_to(admins_packages_path, :class => "no-submenu") do %>
                                <span class="awe-th-large"></span>Packages
                            <% end %>
                          </li>
							<li <% if @current_controller == "quiz_types" %>class = "current"<% end %> >
								<%= link_to(admins_quiz_types_path, :class => "no-submenu") do %>
								<span class="awe-flag"></span>QuizTypes
								<% end %>
							</li>
							<li <% if @current_controller == "section_types" %>class = "current"<% end %> >
								<%= link_to(admins_section_types_path, :class => "no-submenu") do %>
								<span class="awe-folder-open"></span>SectionTypes
								<% end %>
							</li>
							
							<li <% if @current_controller == "credits" %>class = "current"<% end %> >
								<%= link_to(admins_credits_path, :class => "no-submenu") do %>
								<span class="awe-money"></span>Credit Management
								<% end %>
							</li>
							<li <% if @current_controller == "transactions" %>class = "current"<% end %> >
								<%= link_to(admins_transactions_path, :class => "no-submenu") do %>
								<span class="awe-credit-card"></span>Transaction Management
								<% end %>
							</li>
							<li <% if @current_controller == "offers" %>class = "current"<% end %> >
								<%= link_to(admins_offers_path, :class => "no-submenu") do %>
								<span class="awe-gift"></span>Offers
								<% end %>
							</li>
						<% end %>
					</ul>
				</nav>
				<!-- /Main navigation -->
	</div>
</div>
<div style="float:left;margin-left: 20px;">
    <div class="span9">
      <%= yield(:admin_content) %>
    </div>

</div>
</div>