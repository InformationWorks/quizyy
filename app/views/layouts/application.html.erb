<!DOCTYPE html>
<html>
<head>
  <title>GRE340</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>	
	
<!-- Main page header -->
<header class="container" style="height: 50px;">

	<!-- Main page logo -->
	<h1><a href="/homes/index.html" class="brand">GRE340</a></h1>
	
	<div style="float:right">
		<% if user_signed_in? %>
	      
	        <%= link_to 'Edit account', edit_user_registration_url %>
	      
	      	 . 
	      
	        <%= link_to 'Logout', destroy_user_session_url, :method=>'delete' %>
	      
	    <% else %>
	      
	        <form class="navbar-form pull-right" style="width: 446px;margin-top: -50px;height: 73px;box-shadow: none;border:none">
                    <div class="row" style="margin-left: 23px;margin-top: 5px;">
                      <input class="span2" type="text" placeholder="Email">
                      <input class="span2" type="password" placeholder="Password">
                      <button type="submit" class="btn" style="margin-top: 4px;">Sign in</button>
                    </div>
                    <div class="row" style="margin-left: 5px;">
                      <label id="remember-me" class="checkbox span2">
                        <input type="checkbox"> Remember me
                      </label>
                      <a id="forgot-password" class="span2" href="#" style="margin-top: 4px;margin-left: 16px;">Forgot Password?</a>
                    </div>
            </form>
	      
	    <% end %>
    </div>
	
	<!-- Main page headline -->
	<p style="margin-top: 5px;font-size: 14px;margin-left: 12px;margin-bottom: -5px;">Practise tests for a perfect score.</p>
	
</header>	

<!-- Body content -->	
<section class="container" role="main">

<!-- Alert error messages -->
<% if alert %>
  <p class = "alert alert-error">
    <%= alert %>
  </p>
<% elsif flash[:error] || flash[:warning] || flash[:notice] %>
  <div class = "alert alert-error">
    <%= flash[:error] || flash[:warning] || flash[:notice] %>	
  </div>
<% end %>

<%= yield %>

</section>

</body>
</html>
