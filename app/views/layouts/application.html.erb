<!DOCTYPE html>
<html>
<head>
  <title>GRE340</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>	
	
<!-- Main page header -->
<header class="container header-landing">

	<!-- Main page logo -->
	<h1><a href="/" class="brand">GRE340</a></h1>
	
	<div class="banner-right">
		<% if user_signed_in? %>
	      
	        <%= link_to 'Edit account', edit_user_registration_url %>
	      
	      	 . 
	      
	        <%= link_to 'Logout', destroy_user_session_url, :method=>'delete' %>
	      
	    <% elsif controller.controller_name == "landings" %>
	      	
            <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "navbar-form pull-right sign-in-nav"}) do |f| %>
			  
			  <div class="row row-sign-in">
			  
			  <%= f.email_field :email, { :class => "span2",:placeholder => "Email" } %>
			
			  <%= f.password_field :password, { :class => "span2",:placeholder => "Password" } %>
			
			  <%= f.submit "Sign in", { :class => "btn btn-sign-in" } %>
			  
			  <div class="row remember-me-holder">
			  
			  <% if devise_mapping.rememberable? -%>
			    <div class="checkbox span2"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
			  <% end -%>
			  
			  <a id="forgot-password" class="span2 forgot-pwd" href="#">Forgot Password?</a>
			  
			  	</div>
			  
			  </div>
			  
			<% end %>
	      
	    	<% end %>
    </div>
	
	<!-- Main page headline -->
	<p class="landing_sub_logo_text"><span class="awe-check landing_sub_logo_image"></span>To help you get the perfect score.</p>
	
</header>	

<!-- Body content -->	
<section class="container" role="main">

<!-- Alert error messages -->
<% if alert %>
  <p class = "alert alert-error">
    <%= alert %>
  </p>
<% elsif flash[:error] || flash[:warning] || flash[:notice] %>
  <div class = "alert alert-error">
    <%= flash[:error] || flash[:warning] || flash[:notice] %>	
  </div>
<% end %>

<%= yield %>

</section>

</body>
</html>
