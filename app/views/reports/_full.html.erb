<h3>Test Results for <%= @quiz.name %></h3>
<div class="row-fluid">
  <div class="span12">
    <div class="row-fluid">
      <div class="span4">
        <h1><%= @full_report['total_score'] %> / 340</h1>
        <h3><a href="/reviews/<%= @quiz.slug %>" data-no-turbolink>View solution</a></h3>
      </div>
      <div class="span6 align-left">
        <ul class="inline">
          <% @full_report['main_section_report'].each do |key,value| %>
              <li><h3 class="lead"><%=key%></h3></li>
              <li><h3><%= section_scaled_score(key.downcase.to_sym,value['correct']*100/value['total'])%> / 170</h3></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<hr>
<div class="row-fluid">
  <h2>Quiz Section</h2>
  <hr>
  <div class="span4">
    <table class="table">
      <tbody>
      <% @full_report['section_report'].each do |key,value| %>
          <tr>
            <td><h3><%=value['section_name']%></h3></td>
            <td><p><%= value['correct'] %> / <%=  value['total'] %></p> </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div id="chart_div" class="span7" style="height: 200px;"></div>
</div>
<div class="row-fluid">
  <hr>
  <h2>Question Types</h2>
  <hr>
  <table class="span6 table">
    <tbody>
    <% @full_report['category_report'].each do |code,value| %>
        <tr>
          <td><h3><%=value['name']%></h3></td>
          <td><p><%= value['correct'] %> / <%= value['total'] %></p></td>
        </tr>
    <% end %>
    </tbody>
  </table>

</div>